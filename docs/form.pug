extends ../pug/layout

block content
    h4 فرم

    .row
        .col-xl-9.col-lg-8.col-md-12
            div(id="formNormal")
                .example-container
                    .view
                        .card
                            .card-body
                                form
                                    .form-group
                                        label(for='exampleInputEmail1') آدرس ایمیل
                                        input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', placeholder='example@mail.com')
                                        small#emailHelp.form-text.text-muted برای دیگران نمایش داده نخواهد شد.
                                    .form-group
                                        label(for='exampleInputPassword1') پسورد
                                        input#exampleInputPassword1.form-control(type='password', placeholder='')
                                    .form-group
                                        .custom-control.custom-checkbox
                                            input#customCheck1.custom-control-input(type='checkbox')
                                            label.custom-control-label(for='customCheck1') قوانین را مطالعه کرده ام
                                    .form-group
                                        .custom-control.custom-radio
                                            input#customRadio1.custom-control-input(type='radio', name='customRadio')
                                            label.custom-control-label(for='customRadio1') مرد
                                        .custom-control.custom-radio
                                            input#customRadio2.custom-control-input(type='radio', name='customRadio')
                                            label.custom-control-label(for='customRadio2') زن
                                        .custom-control.custom-switch
                                            input#customSwitch1.custom-control-input(type='checkbox')
                                            label.custom-control-label(for='customSwitch1') فعالسازی

                                    button.btn.btn-my-primary.btn-colored-shadow(type='submit') ثبت نام
                                    button.btn.btn-default(type='reset') بازنشانی

